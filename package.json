{
  "name": "playwright-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:login": "npx playwright test src/tests/login.spec.ts",
    "test:show-report": "npx playwright show-report",
    "lint": "eslint . --ext .ts",
    "record:codegen": "npx playwright codegen",
    "test:ui": "npx playwright test --project=chromium --ui",
    "test:lastfailed": "npx playwright test --last-failed",
    "test:tags": "npx playwright test --grep @testauthsetup",
    "test:tags:debug": "npx playwright test --grep @homepageTitle --debug",
    "test:skiptag": "npx playwright test --grep-invert @login2",
    "test:parallel": "npx playwright test --workers=4",
    "test:serial": "npx playwright test --workers=1",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf test-results playwright-report playwright/.auth/state.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "axe-playwright": "^2.2.2",
    "dotenv": "^17.2.3"
  }
}
